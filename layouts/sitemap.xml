<?xml version="1.0" encoding="UTF-8"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {{ range .Site.Pages }}
        {{ if eq .Type "post" }} <!-- Customize this filter if you want only specific content types -->
        <sitemap>
            <loc>{{ .Permalink }}</loc>
            <lastmod>{{ .Date.Format "2006-01-02T15:04:05+00:00" }}</lastmod>
        </sitemap>
        {{ end }}
    {{ end }}
</sitemapindex>
